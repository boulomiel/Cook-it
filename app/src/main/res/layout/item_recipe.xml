<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >


    <TextView
        android:id="@+id/ingredient_item_recipe"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/step_number_recipe"
        android:layout_below="@id/ingredient_item_recipe"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="25sp"
        android:text="1"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/instruction_activity_recipe"
        android:layout_toRightOf="@+id/step_number_recipe"
        android:layout_below="@id/ingredient_item_recipe"
        android:textSize="15sp"
        android:textStyle="italic"
        android:text="Instruction Instruction,Instruction InstructionInstructionInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>